<%- include('includes/header'); -%>
<%- include('includes/nav'); -%>

<div class="container">

  <h1>QnA</h1>
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link <% if (!selectedCategory) { %>active<% } %>" href="/qna/">전체</a>
    </li>
    <% for(var i=0; i < category.length; i++) { %>
      <a class="nav-link <% if (selectedCategory==category[i].id) { %>active<% } %>" href="?category=<%= category[i].id %>"><%= category[i].title %></a>
    <% } %>
  </ul>



  <% if (qna.length>0) { %>
  <ul class="list-unstyled">
    <% for(var i=0; i < qna.length; i++) { %>
    <li class="media">

      <% if (typeof qna[i].upload !== 'undefined' && qna[i].upload) { %>
        <a href="/qna/<%= qna[i].id %>"><img class="mr-3" src="/uploads/<%= qna[i].upload %>"width="128"></a>
      <% } %>

      <div class="media-body">
        <h5 class="mt-0 mb-1"><a href="/qna/<%= qna[i].id %>"><%= qna[i].title %></a></h5>
        <%= qna[i].category_title %> /
        <%= qna[i].author %>
      </div>
    </li>
    <% } %>
  </ul>

  <% } else { %>
    <div class="card">
      <div class="card-header">
        Alert!
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>문의하실 내용을 남겨주세요.</p>
        </blockquote>
      </div>
    </div>
  <% } %>

  <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group" role="group" aria-label="First group">
    </div>
    <div class="input-group">
      <a href="/qna/add" class="btn btn-outline-success">글쓰기</a>
    </div>
  </div>
</div>
<%- include('includes/footer'); -%>
